# Database Configuration
DB_PASSWORD=your_secure_password_here
MONGO_PASSWORD=your_mongo_password_here

# AI Service Configuration
AI_SERVICE_URL=http://host.docker.internal:5003
OPENAI_API_KEY=your_openai_api_key_here

# Rate Limiting
RATE_LIMIT_QUERY=30
RATE_LIMIT_ANALYTICS=60
RATE_LIMIT_SYSTEM=200
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_GLOBAL_FALLBACK=150

# CORS
CORS_ALLOWED_ORIGINS=https://datawhisper.me

# Monitoring
LARGE_DATASET_THRESHOLD=10
CACHE_TTL_MINUTES=5

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Google Drive OAuth (REQUIRED FOR DOCUMENT Q&A FEATURE)
# Get these from Google Cloud Console (see docs/google-drive-docqa-usage.md for setup guide)
GOOGLE_DRIVE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_DRIVE_CLIENT_SECRET=your-google-client-secret
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:8080/api/query/google-drive/connect/callback
